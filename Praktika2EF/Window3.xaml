<Window x:Class="Praktika2EF.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika2EF"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Name="BackButton" Content="Назад" Background="LightCyan" Click="BackButton_Click"/>
        <DataGrid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Name="TableWindow" SelectionChanged="TableWindow_SelectionChanged"></DataGrid>

        <TextBox Grid.Column="0" Grid.Row="2" Name="PurchaseTextBox1" Background="LightGray"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Name="PurchaseTextBox2" Background="LightGray"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Name="PurchaseTextBox3" Background="LightGray"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="2" Name="PurchaseTextBox4" Background="LightGray"></TextBox>

        <Button Grid.Column="0" Grid.Row="3" Name="InsertPurchaseButton" Content="Добавить" Background="Beige" Click="InsertPurchaseButton_Click"/>
        <Button Grid.Column="1" Grid.Row="3" Name="UpdatePurchaseButton" Content="Изменить" Background="MediumPurple" Click="UpdatePurchaseButton_Click"/>
        <Button Grid.Column="2" Grid.Row="3" Name="DeletePurchaseButton" Content="Удалить" Background="HotPink" Click="DeletePurchaseButton_Click"/>

    </Grid>
</Window>
